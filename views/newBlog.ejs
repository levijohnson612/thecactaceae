                    <input class="form-control" type='file' name="upl">
                </div>

                    <textarea class="form-control" type="text" name="content" placeholder="content">
                </textarea>

                <div class="form-group">
                    <button class="btn btn-lrg btn-primary btn-block">Submit</button>
                </div>


            </form>
